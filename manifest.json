{

  "manifest_version": 2,
  "name": "Bookmarks in New Tab",
  "version": "1.0",

  "description": "Shows the bookmark menu in new tabs",

  "icons": {
    "48": "icons/bookmark-48.png"
  },

  // "content_scripts": [
  //   {
  //     "matches": ["*://*.mozilla.org/*"],
  //     "js": ["borderify.js"]
  //   }
  // ],

  "applications": {
    "gecko": {
      "id": "themeanstoachieve@gmail.com"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": [
    "storage","bookmarks"
  ],
  "optional_permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "chrome_url_overrides" : {
    "newtab": "app.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
